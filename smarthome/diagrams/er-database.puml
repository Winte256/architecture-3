@startuml

entity User {
  * id : int
  * name : string
  * email : string
  * password : string
  * role : string
}

entity House {
  * id : int
  * address : string
  * owner_id : int
}

entity Telemetry {
  * id : int
  * temperature : float
  * status : string
  * device_id : int
  * timestamp : datetime
}

entity Device {
  * id : int
  * serial_number : string
  * house_id : int
  * type : string
  * status : string
}

entity DeviceType {
  * id : int
  * name : string
  * description : string
}

User ||--o{ House : "owns"
House ||--o{ Device : "contains"
Device ||--o{ Telemetry : "records"
Device ||--o| DeviceType : "is of type"

@enduml